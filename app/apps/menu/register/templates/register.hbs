<form>
    <div class="control-group">
        <label for="register-email" class="control-label">Email: </label>
        <input id ="register-email" name="email" type="text" value="{{ email }}"/>
    </div>
    <div class="control-group">
        <label for="register-password" class="control-label">Password: </label>
        <input id ="register-password" name="password" type="password" value="{{ password }}" />
    </div>
    <div class="control-group">
        <label for="link-confirm-password" class="control-label">Confirm Password: </label>
        <input id ="link-confirm-password" name="confirm-password" type="password" value="{{ confirmPassword }}" />
    </div>
    <button class="btn js-submit">Save</button>
</form>
